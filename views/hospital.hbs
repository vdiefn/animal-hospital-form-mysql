<div class="container">
  {{> messages}}
  <div class="row mb-3">
    <div class="col-md-11">
      <h1>{{hospital.name}}</h1>
      <h3>{{hospital.Location.name}}</h3>
    </div>
    <div class="d-flex col-md-1 align-items-center justify-content-end">
      <a class="btn btn-link btn-sm" href="/hospitals/{{ hospital.id }}/dashboard" style="font-size:18px; text-decoration:none; color: gray;">Dashboard</a>
    </div>
    <div class="col-md-5">
      <img class="img-responsive center-block mb-5" src="{{hospital.image}}"
        style="width: 400px; height: 300px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>電話:</strong> {{hospital.telephone}}</li>
          <li><strong>地址:</strong> {{hospital.address}}</li>
          <li><strong>營業時間:</strong> {{hospital.openingHours}} - {{hospital.closingHours}}</li>
  
          <li><strong>網站：</strong> <a href="{{hospital.website}}" target="_blank">{{hospital.website}}</a></li>
        </ul>
      </div>
    </div>
    <div class="col-md-7">
      <div>
        <p style="white-space: break-spaces; word-wrap: break-word">{{hospital.description}}
        </p>
      </div>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col-11">
      <a class="btn btn-outline-secondary" href="javascript:history.back()">回上一頁</a>
    </div>
    <div class="col-1">
      <a class="btn btn-outline-success" href="/hospitals/{{ hospital.id }}/edit">修改</a>
    </div>

  </div>
  

</div>